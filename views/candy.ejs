<% include header %>

<div class="row">
  <h1>Welcome to Paige Candy!</h1><br/>
</div>

<div class="row">
  <div class="col-md-4 col-xs-6">
    <ul class="list-unstyled">
      <% for (var obj in objects) { %>
        <li><a href="?form=<%= obj %>"><%= obj %></a></li>
      <% } %>
    </ul>
  </div>
  <div class="col-md-4 col-xs-6">
    <% if (locals.form) { %>
    <form id="<%= objects[form].name %>form" method="post">
      <% objects[form].fields.forEach(function(field) { %>
        <div class="form-group">
          <label for="<%= field %>"><%= field %></label>
          <input type="text" class="form-control" id="<%= field %>" name="<%= field %>"/>
        </div>
      <% }) %>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <% } %>
  </div>
</div>

<% include footer %>
